{{#if addNewQuestion}}
  <h1>New Question</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="content">What is your question?</label>
        {{input value=content id="content"}}
      </div>

      <div class="form-group">
        <label for="author">Your Name</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="note">Additional Notes:</label>
        {{input value=note id="note"}}
      </div>
      <button {{action 'saveQuestion1'}}>Save Question</button>
    </form>
  </div>
{{else}}
  <button {{action 'questionFormShow'}}>New Question</button>
{{/if}}
